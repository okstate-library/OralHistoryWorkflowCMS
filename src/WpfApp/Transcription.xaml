<UserControl x:Class="WpfApp.Transcription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:domain1="clr-namespace:WpfApp.Domain"
             xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
             xmlns:local="clr-namespace:WpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type CheckBox}"  x:Key="listCheckBox" >
                <Setter Property="Margin" Value="0 0 0 0" />
                <Setter Property="FontSize" Value="13"></Setter>
                <Setter Property="FontWeight" Value="Normal"></Setter>
            </Style>

            <Style x:Key="EmptyBorder2" TargetType="{x:Type Border}" BasedOn="{StaticResource EmptyBorder}" >
                <Setter Property="Margin" Value="7" />
            </Style>

            <DataTemplate x:Key="TabItemBold">
                <TextBlock Text="{Binding}" Height="30" FontWeight="Bold" FontSize="15" />
                
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Hidden"   VerticalScrollBarVisibility="Hidden"                     
                      Margin="0 0 0 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Background="{DynamicResource PrimaryHueLightBrush}" Margin="20 20 0 0" Grid.Row="0" Grid.Column="0">
                <Label Name="TitleLabel"  BorderThickness="1"  FontSize="30" />
            </StackPanel>

            <StackPanel Grid.Row="0" Background="{DynamicResource PrimaryHueLightBrush}" Margin="0 20 0 0" Grid.Column="1">
                <Label Name="CurrentStatusLabel" Margin="0 10 0 0"  FontSize="20" />
                <Label HorizontalAlignment="Right" Content="(status)"  BorderThickness="1"  FontSize="10" />
            </StackPanel>

            <StackPanel Grid.Row="0" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="2"
                        Margin="0 20 0 0" Name="DeleteButtonStackPanel">
                <Button Name="DeleteButton"   Width="100" Margin="0 10 0 0" 
                                    Style="{StaticResource MaterialDesignRaisedAccentButton}" Click="DeleteButton_Click" 
                        ToolTip="Delete transcript">
                    _Delete
                </Button>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="20 20 20 30"   Grid.Row="1"  Grid.ColumnSpan="3">

                <!--<dragablz:TabablzControl>-->
                <TabControl>
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <!--<Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="15"/>
                           -->
                           
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                            <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryHueDarkBrush}" />
                                                <Setter Property="HeaderTemplate" Value="{StaticResource TabItemBold}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                    
                                </Setter.Value>

                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <TabItem Header="General">
                        <StackPanel Orientation="Vertical"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                Margin="20,00,50,24"  >

                            <Grid  VerticalAlignment="Top" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="175" />
                                    <ColumnDefinition Width="300" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="175" />
                                    <ColumnDefinition Width="300" />
                                </Grid.ColumnDefinitions>

                                <Border  Grid.Row="1"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="2" Grid.Column="0">Title</Label>

                                <TextBox Name="Title2Label"  Grid.Row="2"  Grid.Column="1" Style="{StaticResource readOnlyTextBox}" />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="2" Grid.Column="3" >Transcribed</Label>

                                <TextBox Name="TranscriptionStatusTextBox"  Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="3" Style="{StaticResource readOnlyTextBox}" />

                                <Border  Grid.Row="3"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="4" Grid.Column="0" >Interviewee(s)</Label>

                                <TextBox Name="IntervieweeTextBox"  Grid.Row="4" Grid.Column="1"  Grid.ColumnSpan="4" Style="{StaticResource readOnlyTextBox}" />

                                <Border  Grid.Row="5"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="6" Grid.Column="0" >Interviewer(s)</Label>
                                
                                <TextBox Name="InterviewerTextBox"  Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource readOnlyTextBox}"/>

                                <Border  Grid.Row="8"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="9" Grid.Column="0" >Interview date(s)</Label>

                                <Grid  VerticalAlignment="Top" Grid.Row="9"  Grid.Column="1"      >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="85" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="85" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="85" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox Name="InterviewDateTextBox"   Grid.Column="0"  Style="{StaticResource readOnlyTextBox}"/>
                                    <TextBox Name="InterviewDateTextBox1"  Grid.Column="2"  Style="{StaticResource readOnlyTextBox}"/>
                                    <TextBox Name="InterviewDateTextBox2"  Grid.Column="4"  Style="{StaticResource readOnlyTextBox}"/>
                                </Grid>

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="9" Grid.Column="3" >Project code</Label>

                                <TextBox Name="ProjectCodeTextBox"  Grid.Row="9" Grid.Column="4" Style="{StaticResource readOnlyTextBox}"/>
                                
                                <Border  Grid.Row="10"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="11" Grid.Column="0" >Format(s)</Label>

                                <TextBox Name="FormatTextBox"  Grid.Row="11" Grid.Column="1" Style="{StaticResource readOnlyTextBox}"/>

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="11" Grid.Column="3" >Access media status</Label>

                                <TextBox Name="AccessMediaStatusTextBox"  Grid.Row="11" Grid.Column="4" Style="{StaticResource readOnlyTextBox}"/>

                                <Border  Grid.Row="12"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="13" Grid.Column="0" >Online</Label>

                                <TextBox Name="OnContentDmTextBox"  Grid.Row="13" Grid.Column="1" Style="{StaticResource readOnlyTextBox}"/>

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="13" Grid.Column="3" >In Rosetta</Label>

                                <TextBox Name="InRosettaTextBox"  Grid.Row="13" Grid.Column="4" Style="{StaticResource readOnlyTextBox}"/>

                                <Border  Grid.Row="14"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="15" Grid.Column="0" >Release form</Label>

                                <TextBox Name="ReleaseFormTextBox"  Grid.Row="15" Grid.Column="1" Style="{StaticResource readOnlyTextBox}"/>

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="15" Grid.Column="3" >Restrictions</Label>

                                <TextBox Name="RestrictionsTextBox"  Grid.Row="15" Grid.Column="4" Style="{StaticResource readOnlyTextBox}"/>

                                <Border  Grid.Row="16"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="17" Grid.Column="0" >Collection</Label>

                                <TextBox Name="CollectionNameTextBox"  Grid.Row="17" Grid.Column="1" Grid.ColumnSpan="5" Style="{StaticResource readOnlyTextBox}"/>

                                <Border  Grid.Row="18"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="19" Grid.Column="0" >Subseries</Label>

                                <TextBox Name="SubseriesTextBox"  Grid.Row="19"   Grid.Column="1" Grid.ColumnSpan="5" Style="{StaticResource readOnlyTextBox}"/>

                                <Border  Grid.Row="20"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="21" Grid.Column="0" >Subject</Label>

                                <TextBox Name="SubjectTextBox"  Grid.Row="21"  Grid.Column="1" Grid.ColumnSpan="5"  Height="50" AcceptsReturn="True" 
                                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Style="{StaticResource readOnlyTextBox}"/>

                                <Border  Grid.Row="22"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="23" Grid.Column="0" >Keywords</Label>

                                <TextBox Name="KeywordsTextBox"  Grid.Row="23"  Grid.Column="1" Grid.ColumnSpan="5"  Height="50" AcceptsReturn="True"
                                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Style="{StaticResource readOnlyTextBox}"/>

                                <Border  Grid.Row="24"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="25" Grid.Column="0" >Description</Label>

                                <TextBox Name="DescriptionTextBox"  Grid.Row="25"  Grid.Column="1" Grid.ColumnSpan="5"  Height="100" AcceptsReturn="True"
                                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Style="{StaticResource readOnlyTextBox}"/>

                            </Grid>

                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Transcript" >
                        <StackPanel Orientation="Vertical"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                Margin="20,00,50,24"  >


                            <Grid  VerticalAlignment="Top" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="300" />
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="300" />

                                </Grid.ColumnDefinitions>

                                <Border  Grid.Row="1"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="2" Grid.Column="0" >Transcribed</Label>
                                <StackPanel  Grid.Row="2" Grid.Column="2"  Orientation="Horizontal" >

                                    <CheckBox Name="TranscriptStatusCompleteCheckBox"
                                            Style="{StaticResource MaterialDesignCheckBox}" Checked="TranscriptStatus_Check">
                                        Complete
                                    </CheckBox>

                                    <CheckBox Name="TranscriptStatusInProgressCheckBox"
                                            Style="{StaticResource MaterialDesignCheckBox}" Checked="TranscriptStatus_Check">
                                        In progress
                                    </CheckBox>

                                </StackPanel>
                                
                                <Border  Grid.Row="3"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="4" Grid.Column="0" >Transcriber assigned</Label>

                                <domain1:FilteredComboBox x:Name="TranscriberAssignedFilteredComboBox" Grid.Row="4" Grid.Column="2" materialDesign:HintAssist.HintOpacity=".26"  
                            HorizontalAlignment="Left" VerticalAlignment="Top" Width="300"/>
                                
                                <Border  Grid.Row="5"  Style="{StaticResource EmptyBorder2}"   />
                               
                                <Label Style="{StaticResource BoldLabel}" Grid.Row="6" Grid.Column="0" >Audit check completed</Label>
                                <domain1:FilteredComboBox x:Name="AuditCheckCompletedFilteredComboBox" Grid.Row="6" Grid.Column="2" 
                                                          materialDesign:HintAssist.HintOpacity=".26"  
                            HorizontalAlignment="Left" VerticalAlignment="Top" Width="300"/>
                                
                                <Border  Grid.Row="7"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="8" Grid.Column="0" >First edit completed</Label>

                                <domain1:FilteredComboBox x:Name="FirstEditCompletedFilteredComboBox" Grid.Row="8" Grid.Column="2" 
                                                          materialDesign:HintAssist.HintOpacity=".26"  
                            HorizontalAlignment="Left" VerticalAlignment="Top" Width="300"/>
                                
                                <Border  Grid.Row="9"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="10" Grid.Column="0" >Second edit completed</Label>
                                <domain1:FilteredComboBox x:Name="SecondEditCompletedFilteredComboBox"  Grid.Row="10" Grid.Column="2"
                                                          materialDesign:HintAssist.HintOpacity=".26"  
                            HorizontalAlignment="Left" VerticalAlignment="Top" Width="300"/>
                                
                                <Border  Grid.Row="11"  Style="{StaticResource EmptyBorder2}"   />
                                
                                <Label Style="{StaticResource BoldLabel}" Grid.Row="12" Grid.Column="0" >Third edit completed</Label>                               
                                <domain1:FilteredComboBox x:Name="ThirdEditCompletedFilteredComboBox"  Grid.Row="12" Grid.Column="2"
                                                          materialDesign:HintAssist.HintOpacity=".26" HorizontalAlignment="Left" 
                                                          VerticalAlignment="Top" Width="300"/>
                                
                                <Border  Grid.Row="13"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="14" Grid.Column="0" >Draft sent</Label>
                                <DatePicker Name="DraftSentDatePicker" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="14" Grid.Column="2"   />

                                <Border  Grid.Row="15"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="16" Grid.Column="0" >Edit with corrections completed</Label>
                                <domain1:FilteredComboBox x:Name="EditCorrectionCompletedFilteredComboBox"  Grid.Row="16" Grid.Column="2"
                                                          materialDesign:HintAssist.HintOpacity=".26" HorizontalAlignment="Left" 
                                                          VerticalAlignment="Top" Width="300"/>
                                
                                <Border  Grid.Row="17"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="18" Grid.Column="0" >Final edit completed</Label>
                                <domain1:FilteredComboBox x:Name="FinalEditCompletedFilteredComboBox"  Grid.Row="18" Grid.Column="2"
                                                          materialDesign:HintAssist.HintOpacity=".26" HorizontalAlignment="Left" 
                                                          VerticalAlignment="Top" Width="300"/>
                                
                                <Border  Grid.Row="19"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="20" Grid.Column="0">Sent out</Label>

                                <StackPanel  Grid.Row="20" Grid.Column="2"  Orientation="Horizontal">

                                    <CheckBox Name="SentOutYesCheckBox"  Style="{StaticResource MaterialDesignCheckBox}" Checked="SentOut_Check">
                                        Yes
                                    </CheckBox>

                                    <CheckBox Name="SentOutNoCheckBox" Style="{StaticResource MaterialDesignCheckBox}" Checked="SentOut_Check">
                                        No
                                    </CheckBox>

                                </StackPanel>

                                <Border  Grid.Row="21"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="22" Grid.Column="0" >Final sent</Label>
                                <DatePicker Name="FinalSentDatePicker" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="22" Grid.Column="2"   />

                                <Border  Grid.Row="23"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="24" Grid.Column="0" >Metadata draft</Label>
                                <TextBox Name="MetadataDraftTextBox"  Grid.Row="24" Grid.Column="2"  Grid.ColumnSpan="3" Style="{StaticResource EditableTextBox}" />

                                <Border  Grid.Row="25"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="26" Grid.Column="0">Priority</Label>

                                <StackPanel  Grid.Row="26" Grid.Column="2"  Orientation="Horizontal">

                                    <CheckBox Name="IsPriorityYesCheckBox"  Style="{StaticResource MaterialDesignCheckBox}" Checked="IsPriority_Check">
                                        Yes
                                    </CheckBox>

                                    <CheckBox Name="IsPriorityNoCheckBox" Style="{StaticResource MaterialDesignCheckBox}" Checked="IsPriority_Check">
                                        No
                                    </CheckBox>

                                </StackPanel>
                                

                                <Border  Grid.Row="27"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="28" Grid.Column="0" >Reason of Priority</Label>
                                <TextBox Name="ReasonofPriorityTextBox"  Grid.Row="28" Grid.Column="2" Grid.ColumnSpan="3" 
                                     VerticalAlignment="Top" Height="100" AcceptsReturn="True" TextWrapping="Wrap"   VerticalScrollBarVisibility="Auto"  
                                     Style="{StaticResource EditableTextBox}" />


                                <Border  Grid.Row="29"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="30" Grid.Column="0" >Transcript location</Label>
                                <TextBox Name="TranscriptionLocationTextBox"  Grid.Row="30" Grid.Column="2"  Grid.ColumnSpan="3" Style="{StaticResource EditableTextBox}" />

                                <Border  Grid.Row="31"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="32" Grid.Column="0" >Transcription note</Label>
                                <TextBox Name="TranscriberNoteTextBox"  Grid.Row="32" Grid.Column="2" Grid.ColumnSpan="3" 
                                     VerticalAlignment="Top" Height="100" AcceptsReturn="True" TextWrapping="Wrap"   VerticalScrollBarVisibility="Auto"  
                                     Style="{StaticResource EditableTextBox}" />

                                <Button Name="TranscriptionDetailsButton" Grid.Row="33"  Grid.ColumnSpan="5"  Margin="0,20,0,0" Style="{StaticResource MaterialDesignRaisedAccentButton}" Click="TranscriptionDetailsButton_Click" 
                        ToolTip="Submit transcript details">
                                    _Submit
                                </Button>

                            </Grid>

                        </StackPanel>
                    </TabItem>
                    
                    <TabItem Header="Media">
                        <StackPanel Orientation="Vertical"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                Margin="20,00,50,24"  >

                            <Grid  VerticalAlignment="Top" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="27*" />
                                    <RowDefinition Height="22*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="125" />
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="125" />
                                    <ColumnDefinition Width="250" />
                                </Grid.ColumnDefinitions>
                                <Border  Grid.Row="1"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="2" Grid.Column="0">Media</Label>
                                <StackPanel  Grid.Row="2" Grid.Column="2"  Orientation="Horizontal"    >
                                    <CheckBox Name="MediaAudioCheckBox">
                                        Audio
                                    </CheckBox>
                                    <CheckBox Name="MediaVideoCheckBox">
                                        Video
                                    </CheckBox>
                                </StackPanel>

                                <Border  Grid.Row="3"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="4" Grid.Column="0" >Born digital</Label>
                                <StackPanel  Grid.Row="4" Grid.Column="2"  Orientation="Horizontal">

                                    <CheckBox Name="BornDigitalYesCheckBox"
                                            Style="{StaticResource MaterialDesignCheckBox}" Checked="BornDigital_Check">
                                        Yes
                                    </CheckBox>

                                    <CheckBox Name="BornDigitalNoCheckBox"
                                            Style="{StaticResource MaterialDesignCheckBox}" Checked="BornDigital_Check">
                                        No
                                    </CheckBox>

                                </StackPanel>

                                <Border  Grid.Row="5"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="50 0 0 0">(if no)</Label>

                                <CheckBox Name="AudiocassetteCheckBox" Grid.Row="6" Grid.Column="2">
                                    Audiocassette
                                </CheckBox>
                                <CheckBox Name="MiniDVCheckBox" Grid.Row="7" Grid.Column="2">
                                    MiniDV
                                </CheckBox>
                                <CheckBox Grid.Row="8" Grid.Column="2" x:Name="OtherCheckBox"
                      IsChecked="False" >Other</CheckBox>

                                <TextBox Name="OtherDigitalFormatTextBox"  Grid.Row="8" Grid.Column="3"  Grid.ColumnSpan="3" Style="{StaticResource EditableTextBox}"
                                     IsEnabled="{Binding Path=IsChecked, ElementName=OtherCheckBox}"/>

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="9" Grid.Column="0" Margin="50 0 0 0">Converted</Label>

                                <StackPanel  Grid.Row="9" Grid.Column="2"  Orientation="Horizontal">
                                    <CheckBox Name="ConvertedYesCheckBox"
                                            Style="{StaticResource MaterialDesignCheckBox}" Checked="Converted_Check">
                                        Yes
                                    </CheckBox>

                                    <CheckBox Name="ConvertedNoCheckBox"
                                            Style="{StaticResource MaterialDesignCheckBox}" Checked="Converted_Check">
                                        No
                                    </CheckBox>
                                </StackPanel>

                                <DatePicker Name="DateDigitalConvertedDateDatePicker"  Grid.Row="9" Grid.ColumnSpan="2"   Grid.Column="3" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"  />

                                <Border  Grid.Row="10"  Style="{StaticResource EmptyBorder2}"   />

                                <Label Style="{StaticResource BoldLabel}" Grid.Row="11" Grid.Column="0" >Access media status</Label>
                                <StackPanel  Grid.Row="11" Grid.Column="2" Grid.ColumnSpan="3"  Orientation="Horizontal">

                                    <CheckBox Name="AccessMediaStatusCompleteCheckBox"
                                            Style="{StaticResource MaterialDesignCheckBox}" Checked="AccessMediaStatus_Check">
                                        Complete
                                    </CheckBox>

                                    <CheckBox Name="AccessMediaStatusInProgressCheckBox"
                                            Style="{StaticResource MaterialDesignCheckBox}" Checked="AccessMediaStatus_Check">
                                        In progress
                                    </CheckBox>                                  
