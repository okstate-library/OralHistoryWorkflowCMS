                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="200" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Style="{StaticResource MaterialDesignTitleTextBlock}">Supplement</TextBlock>

                            <Border  Grid.Row="1"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="2" Grid.Column="0">On CONTENT dm</Label>

                            <StackPanel  Grid.Row="2" Grid.Column="2"  Orientation="Horizontal">
                                <ToggleButton Style="{StaticResource YesNoToggleButtonStyle}"
                                  IsChecked="True" Name="OnContentDmToggleButton">
                                </ToggleButton>
                            </StackPanel>

                            <Border  Grid.Row="3"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="4" Grid.Column="0">In Rosetta</Label>
                            <StackPanel  Grid.Row="4" Grid.Column="2"  Orientation="Horizontal">
                                <ToggleButton Style="{StaticResource YesNoToggleButtonStyle}"
                                  IsChecked="True" Name="InRosettaToggleButton">
                                </ToggleButton>
                            </StackPanel>

                            <Border  Grid.Row="5"  Style="{StaticResource EmptyBorder}"   />

