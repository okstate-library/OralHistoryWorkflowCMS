<UserControl x:Class="WpfApp.Transcription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type TextBlock}"  x:Key="expanderHeaderTextBlock">
                <Setter Property="Margin" Value="0 0 0 0" />
                <Setter Property="FontSize" Value="15"></Setter>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Hidden"  VerticalScrollBarVisibility="Hidden"                     
                      Margin="0 0 0 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Margin="20 0 0 10" Grid.Row="0" Grid.ColumnSpan="2">
                <Label Name="TitleLabel"  BorderThickness="1"  FontSize="30" />
            </StackPanel>

            <materialDesign:Card Background="{DynamicResource PrimaryHueLightBrush}"  Grid.Row="1" Grid.Column="0"   
                      Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                      Width="180" Margin="0 0 1 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="5 10 10 0">
                        <Label Name="CurrentStatusLabel"  BorderThickness="1"  FontSize="20" />
                        <Label HorizontalAlignment="Right" Content="(status)"  BorderThickness="1"  FontSize="10" />
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="10 10 10 0">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="125" />
                                    <ColumnDefinition Width="25" />
                                </Grid.ColumnDefinitions>
                                <ProgressBar Name="TranscriptionProgressProgressBar" Grid.Column="0" Value="75" Orientation="Horizontal" Height="5"  />
                                <Label Name="TranscriptionProgressLabel" HorizontalAlignment="Right" Grid.Column="1" BorderThickness="1"  FontSize="10" />
                            </Grid>
                        </StackPanel>
                        <Label HorizontalAlignment="Right" Content="(progress percentage)"  BorderThickness="1"  FontSize="10" />
                    </StackPanel>
                </Grid>


            </materialDesign:Card>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"   Grid.Row="1" Grid.Column="1">

                <!--General Details-->
                <Expander  Name="GeneralExpander" Background="{DynamicResource AlternativeColor}" ExpandDirection="Right" Expander.Expanded="Expander_Expanded">
                    <Expander.Header>
                        <TextBlock Text="General" RenderTransformOrigin=".5,.5">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="90" />
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Expander.Header>
                    <StackPanel Orientation="Vertical"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                Margin="20,24,50,24"  >

                        <Grid  VerticalAlignment="Top" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="300" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Style="{StaticResource MaterialDesignTitleTextBlock}">General</TextBlock>

                            <Border  Grid.Row="1"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="2" Grid.Column="0">Title</Label>

                            <TextBox Name="Title2Label"  Grid.Row="2"  Grid.Column="1" Style="{StaticResource readOnlyTextBox}" />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="2" Grid.Column="2" >Transcription status</Label>

                            <TextBox Name="TranscriptionStatusTextBox"  Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" Style="{StaticResource readOnlyTextBox}" />

                            <Border  Grid.Row="3"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="4" Grid.Column="0" >Interviewee</Label>

                            <TextBox Name="IntervieweeTextBox"  Grid.Row="4" Grid.Column="1"  Style="{StaticResource readOnlyTextBox}" />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="4" Grid.Column="2" >Interviewer</Label>

                            <TextBox Name="InterviewerTextBox"  Grid.Row="4" Grid.Column="3" Style="{StaticResource readOnlyTextBox}"/>

                            <Border  Grid.Row="5"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="6" Grid.Column="0" >Project code</Label>

                            <TextBox Name="ProjectCodeTextBox"  Grid.Row="6" Grid.Column="1" Style="{StaticResource readOnlyTextBox}"/>

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="6" Grid.Column="2" >Format(s)</Label>

                            <TextBox Name="FormatTextBox"  Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="3" Style="{StaticResource readOnlyTextBox}"/>

                            <Border  Grid.Row="7"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="8" Grid.Column="0" >Interview date</Label>

                            <TextBox Name="InterviewDateTextBox"  Grid.Row="8" Grid.Column="1"  Style="{StaticResource readOnlyTextBox}"/>

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="8" Grid.Column="2" >Access media status</Label>

                            <TextBox Name="AccessMediaStatusTextBox"  Grid.Row="8" Grid.Column="3" Style="{StaticResource readOnlyTextBox}"/>

                            <Border  Grid.Row="9"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="10" Grid.Column="0" >On CONTENT dm</Label>

                            <TextBox Name="OnContentDmTextBox"  Grid.Row="10" Grid.Column="1" Style="{StaticResource readOnlyTextBox}"/>

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="10" Grid.Column="2" >In Rosetta</Label>

                            <TextBox Name="InRosettaTextBox"  Grid.Row="10" Grid.Column="3" Style="{StaticResource readOnlyTextBox}"/>

                            <Border  Grid.Row="11"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="12" Grid.Column="0" >Release form</Label>

                            <TextBox Name="ReleaseFormTextBox"  Grid.Row="12" Grid.Column="1" Style="{StaticResource readOnlyTextBox}"/>

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="12" Grid.Column="2" >Restrictions</Label>

                            <TextBox Name="RestrictionsTextBox"  Grid.Row="12" Grid.Column="3" Style="{StaticResource readOnlyTextBox}"/>

                            <Border  Grid.Row="13"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="14" Grid.Column="0" >Collection</Label>

                            <TextBox Name="CollectionNameTextBox"  Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource readOnlyTextBox}"/>

                            <Border  Grid.Row="15"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="16" Grid.Column="0" >Subseries</Label>

                            <TextBox Name="SubseriesTextBox"  Grid.Row="17"  Grid.ColumnSpan="4" Style="{StaticResource readOnlyTextBox}"/>

                            <Border  Grid.Row="18"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="19" Grid.Column="0" >Subject</Label>

                            <TextBox Name="SubjectTextBox"  Grid.Row="20"  Grid.ColumnSpan="4"  Height="50" AcceptsReturn="True" 
                                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Style="{StaticResource readOnlyTextBox}"/>

                            <Border  Grid.Row="21"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="22" Grid.Column="0" >Keywords</Label>

                            <TextBox Name="KeywordsTextBox"  Grid.Row="23"  Grid.ColumnSpan="4"  Height="50" AcceptsReturn="True"
                                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Style="{StaticResource readOnlyTextBox}"/>

                            <Border  Grid.Row="24"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="25" Grid.Column="0" >Description</Label>

                            <TextBox Name="DescriptionTextBox"  Grid.Row="26"  Grid.ColumnSpan="4"  Height="50" AcceptsReturn="True"
                                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Style="{StaticResource readOnlyTextBox}"/>

                        </Grid>

                    </StackPanel>
                </Expander>
                <Border Background="{DynamicResource MaterialDesignDivider}" Width="1" VerticalAlignment="Stretch" SnapsToDevicePixels="True" />

                <!--Transcript Details-->

                <Expander Name="TranscriptExpander" ExpandDirection="Right" Background="{DynamicResource PrimaryHueLightBrush}" Expander.Expanded="Expander_Expanded">
                    <Expander.Header>
                        <TextBlock Text="Transcript" RenderTransformOrigin=".5,.5">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="90" />
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Expander.Header>

                    <StackPanel Orientation="Vertical"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="20,24,50,24"  >


                        <Grid  VerticalAlignment="Top" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="200" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Style="{StaticResource MaterialDesignTitleTextBlock}">Transcript</TextBlock>

                            <Border  Grid.Row="1"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="2" Grid.Column="0" >Transcriber assigned</Label>
                            <TextBox Name="TranscriberAssignedTextBox"  Grid.Row="2" Grid.Column="2"  Grid.ColumnSpan="3" Style="{StaticResource EditableTextBox}"/>

                            <Border  Grid.Row="3"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="4" Grid.Column="0" >Transcript completed</Label>
                            <DatePicker Name="TranscriptCompletedDateDatePicker" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="4" Grid.Column="2"   />

                            <Border  Grid.Row="5"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="6" Grid.Column="0" >Audit check completed</Label>
                            <TextBox Name="AuditCheckCompletedTextBox"  Grid.Row="6" Grid.Column="2" Style="{StaticResource EditableTextBox}" />
                            <DatePicker Name="AuditCheckCompletedTDateDatePicker" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="6" Grid.Column="4"   />

                            <Border  Grid.Row="7"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="8" Grid.Column="0" >First edit completed</Label>
                            <TextBox Name="FirstEditCompletedTextBox"  Grid.Row="8" Grid.Column="2" Style="{StaticResource EditableTextBox}" />
                            <DatePicker Name="FirstEditCompletedTDateDatePicker" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="8" Grid.Column="4"   />

                            <Border  Grid.Row="9"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="10" Grid.Column="0" >Second edit completed</Label>
                            <TextBox Name="SecondEditCompletedTextBox"  Grid.Row="10" Grid.Column="2" Style="{StaticResource EditableTextBox}" />
                            <DatePicker Name="SecondEditCompletedTDateDatePicker" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="10" Grid.Column="4"   />

                            <Border  Grid.Row="11"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="12" Grid.Column="0" >Draft sent</Label>
                            <DatePicker Name="DraftSentDatePicker" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="12" Grid.Column="2"   />

                            <Border  Grid.Row="13"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="14" Grid.Column="0" >Edit with corrections completed</Label>
                            <TextBox Name="EditCorrectionCompletedTextBox"  Grid.Row="14" Grid.Column="2" Style="{StaticResource EditableTextBox}" />
                            <DatePicker Name="EditCorrectionCompletedTDateDatePicker" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="14" Grid.Column="4"   />

                            <Border  Grid.Row="15"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="16" Grid.Column="0" >Final edit completed</Label>
                            <TextBox Name="FinalEditCompletedTextBox"  Grid.Row="16" Grid.Column="2" Style="{StaticResource EditableTextBox}" />
                            <DatePicker Name="FinalEditCompletedTDateDatePicker" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="16" Grid.Column="4"   />

                            <Border  Grid.Row="17"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="18" Grid.Column="0" >Final sent</Label>
                            <DatePicker Name="FinalSentDatePicker" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Grid.Row="18" Grid.Column="2"   />

                            <Border  Grid.Row="19"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="20" Grid.Column="0" >Transcript status</Label>
                            <StackPanel  Grid.Row="20" Grid.Column="2"  Orientation="Horizontal" >
                                <ToggleButton Style="{StaticResource ProgressToggleButtonStyle}"
                                  IsChecked="True" Name="TranscriptStatusToggleButton">
                                </ToggleButton>
                            </StackPanel>

                            <Border  Grid.Row="21"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="22" Grid.Column="0" >Transcriber location</Label>
                            <TextBox Name="TranscriberLocationTextBox"  Grid.Row="22" Grid.Column="2"  Grid.ColumnSpan="3" Style="{StaticResource EditableTextBox}" />

                            <Border  Grid.Row="23"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="24" Grid.Column="0" >Transcriber notes</Label>
                            <TextBox Name="TranscriberNoteTextBox"  Grid.Row="24" Grid.Column="2" Grid.ColumnSpan="3" 
                                     VerticalAlignment="Top" Height="100" AcceptsReturn="True" TextWrapping="Wrap"   VerticalScrollBarVisibility="Auto"  
                                     Style="{StaticResource EditableTextBox}" />

                            <Button Grid.Row="35"  Grid.ColumnSpan="5"  Margin="0,20,0,0" Style="{StaticResource MaterialDesignRaisedAccentButton}" Click="TranscriptionDetailsButton_Click" 
                        ToolTip="Submit transcript details">
                                _Submit
                            </Button>

                        </Grid>

                    </StackPanel>
                </Expander>
                <Border Background="{DynamicResource MaterialDesignDivider}" Width="1" VerticalAlignment="Stretch" SnapsToDevicePixels="True" />

                <!--Media Details-->
                <Expander Name="MediaExpander" ExpandDirection="Right" Background="{DynamicResource AlternativeColor}" Expander.Expanded="Expander_Expanded">
                    <Expander.Header>
                        <TextBlock Text="Media" RenderTransformOrigin=".5,.5">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="90" />
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Expander.Header>
                    <StackPanel Orientation="Vertical"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="20,24,50,24"  >


                        <Grid  VerticalAlignment="Top" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="27*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="200" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Style="{StaticResource MaterialDesignTitleTextBlock}">Media</TextBlock>

                            <Border  Grid.Row="1"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="2" Grid.Column="0">Media</Label>
                            <StackPanel  Grid.Row="2" Grid.Column="2"  Orientation="Horizontal"    >
                                <CheckBox Name="MediaAudioCheckBox">
                                    Audio
                                </CheckBox>
                                <CheckBox Name="MediaVideoCheckBox">
                                    Video
                                </CheckBox>
                            </StackPanel>

                            <Border  Grid.Row="3"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="4" Grid.Column="0" >Born digital</Label>
                            <StackPanel  Grid.Row="4" Grid.Column="2"  Orientation="Horizontal">
                                <ToggleButton Style="{StaticResource YesNoToggleButtonStyle}"
                                  IsChecked="True" Name="BornDigitalToggleButton">
                                </ToggleButton>
                            </StackPanel>

                            <Border  Grid.Row="5"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="50 0 0 0">(if no)</Label>

                            <CheckBox Name="AudiocassetteCheckBox" Grid.Row="6" Grid.Column="2">
                                Audiocassette
                            </CheckBox>
                            <CheckBox Name="MiniDVCheckBox" Grid.Row="7" Grid.Column="2">
                                MiniDV
                            </CheckBox>
                            <CheckBox Grid.Row="8" Grid.Column="2" x:Name="OtherCheckBox"
                      IsChecked="False" >Other</CheckBox>

                            <TextBox Name="OtherDigitalFormatTextBox"  Grid.Row="8" Grid.Column="3"  Grid.ColumnSpan="3" Style="{StaticResource EditableTextBox}"
                                     IsEnabled="{Binding Path=IsChecked, ElementName=OtherCheckBox}"/>

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="9" Grid.Column="0" Margin="50 0 0 0">Converted</Label>

                            <StackPanel  Grid.Row="9" Grid.Column="2"  Orientation="Horizontal">
                                <ToggleButton Style="{StaticResource YesNoToggleButtonStyle}"
                                  IsChecked="True" Name="DigitalConvertedToggleButton">
                                </ToggleButton>
                            </StackPanel>

                            <DatePicker Name="DateDigitalConvertedDateDatePicker"  Grid.Row="9" Grid.ColumnSpan="2"   Grid.Column="3" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"  />

                            <Border  Grid.Row="10"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="11" Grid.Column="0" >Access media status</Label>
                            <StackPanel  Grid.Row="11" Grid.Column="2" Grid.ColumnSpan="3"  Orientation="Horizontal">
                                <ToggleButton Style="{StaticResource ProgressToggleButtonStyle}"
                                  IsChecked="True" Name="AccessMediaToggleButton">
                                </ToggleButton>
                            </StackPanel>

                            <Border  Grid.Row="12"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="13" Grid.Column="0" >Master file location</Label>
                            <TextBox Name="MasterFileLocationTextBox"  Grid.Row="13" Grid.Column="2"  Grid.ColumnSpan="3" Style="{StaticResource EditableTextBox}" />

                            <Border  Grid.Row="14"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="15" Grid.Column="0" >Access file location</Label>
                            <TextBox Name="AccessFileLocationTextBox"  Grid.Row="15" Grid.Column="2"  Grid.ColumnSpan="3" Style="{StaticResource EditableTextBox}" />


                            <Button Grid.Row="16"  Grid.ColumnSpan="5"  Margin="0,20,0,0"  Style="{StaticResource MaterialDesignRaisedAccentButton}" Click="MediaDetailsButton_Click" 
                        ToolTip="Submit transcript details">
                                _Submit
                            </Button>

                        </Grid>

                    </StackPanel>
                </Expander >

                <Border Background="{DynamicResource MaterialDesignDivider}" Width="1" VerticalAlignment="Stretch" SnapsToDevicePixels="True" />

                <!--Metadata Details-->
                <Expander Name="MetadataExpander" ExpandDirection="Right" Background="{DynamicResource PrimaryHueLightBrush}" Expander.Expanded="Expander_Expanded">
                    <Expander.Header>
                        <TextBlock Text="Metadata" RenderTransformOrigin=".5,.5">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="90" />
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Expander.Header>
                    <StackPanel Orientation="Vertical"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="20,24,50,24"  >


                        <Grid  VerticalAlignment="Top" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="300" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Style="{StaticResource MaterialDesignTitleTextBlock}">Metadata</TextBlock>

                            <Border  Grid.Row="1"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="2" Grid.Column="0">Title</Label>

                            <TextBox Name="TitleTextBox" Grid.Row="2"  Grid.Column="1" Grid.ColumnSpan="3"   Style="{StaticResource EditableTextBox}" />

                            <Border  Grid.Row="3"  Style="{StaticResource EmptyBorder}"   />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="4" Grid.Column="0">Interviewee</Label>

                            <TextBox Name="Interviewee2TextBox"  Grid.Row="4" Grid.Column="1"   Style="{StaticResource EditableTextBox}" />

                            <Label Style="{StaticResource BoldLabel}" Grid.Row="4" Grid.Column="2">Interviewer</Label>

